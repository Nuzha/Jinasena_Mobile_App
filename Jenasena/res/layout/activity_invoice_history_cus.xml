<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InvoiceHistoryCus" >

    <TextView
        android:id="@+id/tv_invoiceHisCus_repid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_invoiceHisCus_Tilte_repid"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/tv_invoiceHisCus_Tilte_repid"
        android:text="DEL01Rep01"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28"
         />

    <TextView
        android:id="@+id/tv_invoiceHisCus_Tilte_repid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Logged in as"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28"
         />

    <TextView
        android:id="@+id/tv_invoiceHisCus_Title_cusid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_invoiceHisCus_Tilte_repid"
        android:layout_below="@+id/tv_invoiceHisCus_Tilte_repid"
        android:layout_marginTop="32dp"
        android:text="Customer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28"
        />

    <Spinner
        android:id="@+id/sp_invoiceHisCus_customerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_invoiceHisCus_repid"
        android:layout_below="@+id/tv_invoiceHisCus_repid"
        android:layout_marginTop="15dp"
        android:textColor="#ffee28"
         />

    <ListView
        android:id="@+id/lvInvoHistoryCus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sp_invoiceHisCus_customerId"
        android:layout_below="@+id/sp_invoiceHisCus_customerId"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="20dp" >

    </ListView>

</RelativeLayout>
