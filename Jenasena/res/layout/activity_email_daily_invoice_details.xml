<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EmailDailyInvoiceDetails" >

    <TextView
        android:id="@+id/tv_Tititle_To_emailDailyInvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="To"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tv_content_emailDailyInvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_sendEmail_emailDailyInvo"
        android:layout_alignLeft="@+id/tv_Title_content_emailDailyInvo"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_Title_content_emailDailyInvo"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/tv_Title_subject_emailDailyInvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_Tititle_To_emailDailyInvo"
        android:layout_below="@+id/tv_Tititle_To_emailDailyInvo"
        android:layout_marginTop="33dp"
        android:text="Subject"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28"/>
    

    <TextView
        android:id="@+id/tv_To_emailDailyInvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_subject_emailDailyInvo"
        android:layout_alignTop="@+id/tv_Tititle_To_emailDailyInvo"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_subject_emailDailyInvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_sendEmail_emailDailyInvo"
        android:layout_alignTop="@+id/tv_Title_subject_emailDailyInvo"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_Title_content_emailDailyInvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_Title_subject_emailDailyInvo"
        android:layout_below="@+id/tv_subject_emailDailyInvo"
        android:layout_marginTop="18dp"
        android:text="Content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28"
         />

    <Button
        android:id="@+id/bt_sendEmail_emailDailyInvo"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Send Email" />

</RelativeLayout>
