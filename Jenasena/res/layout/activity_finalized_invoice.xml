<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FinalizedInvoice" >

    <TextView
        android:id="@+id/tvtitletotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvtitleuprice"
        android:layout_alignBottom="@+id/tvtitleuprice"
        android:layout_alignParentRight="true"
        android:text="Total"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvtitleqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvtitleuprice"
        android:layout_alignBottom="@+id/tvtitleuprice"
        android:layout_alignRight="@+id/etfDate"
        android:layout_marginRight="20dp"
        android:text="Unit Price"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btfdtepick"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etfDate"
        android:layout_alignLeft="@+id/tvtitletotal"
        android:layout_alignRight="@+id/btfgeninvoice"
        android:layout_alignTop="@+id/etfDate"
        android:text="D" />

    <TextView
        android:id="@+id/tvtitleAC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Customer Id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tvtitleAC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvtitleAC2"
        android:text="Logged in as:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <Button
        android:id="@+id/btfgeninvoice"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvfinrepId"
        android:layout_marginTop="48dp"
        android:text="Generate Invoice" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvtitleAC1"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/tvtitleAC1"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <EditText
        android:id="@+id/etfDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee28"
        android:layout_below="@+id/tvtitleAC1"
        android:layout_toLeftOf="@+id/btfdtepick"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10" >
        

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/lvOldInvo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvfamount"
        android:layout_alignLeft="@+id/tvtitleitemName"
        android:layout_below="@+id/tvtitletotal" >

    </ListView>

    <TextView
        android:id="@+id/tvfInvoiceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btfgeninvoice"
        android:layout_centerHorizontal="true"
        android:text="Invoice Id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tvfamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:layout_toRightOf="@+id/tvfInvoiceId"
        android:text="TextView"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvfamount"
        android:layout_alignBottom="@+id/tvfamount"
        android:layout_alignRight="@+id/tvtitleAC2"
        android:text="Amount"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tvtitleuprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etfDate"
        android:layout_below="@+id/tvfInvoiceId"
        android:layout_marginTop="14dp"
        android:text="Quantity"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvtitleitemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvtitleuprice"
        android:layout_alignBottom="@+id/tvtitleuprice"
        android:layout_alignLeft="@+id/btfgeninvoice"
        android:text="Item Name"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btViewInvoReprt"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/tvtitleitemName"
        android:text="View Invoice Report" />

    <TextView
        android:id="@+id/tvfcus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvtitleAC2"
        android:layout_alignBottom="@+id/tvtitleAC2"
        android:layout_alignRight="@+id/btfdtepick"
        android:layout_toRightOf="@+id/tvtitleAC1"
        android:text="CusId"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tvfinrepId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvfcus"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvfcus"
        android:text="Rep Id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

</RelativeLayout>