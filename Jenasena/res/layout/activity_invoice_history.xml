<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InvoiceHistory" >

  
         <TextView
        android:id="@+id/tv_Tititle_repid_invoiceHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Logged in as"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tv_repid_invoiceHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_Tititle_repid_invoiceHistory"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/tv_Tititle_repid_invoiceHistory"
        android:text="DelRep"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28"
         />

       <ListView
           android:id="@+id/lv_invoHistry_invoiceHistory"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_above="@+id/bt_ViewInvoHistryReport_invoiceHistory"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_below="@+id/bt_viewInvoice_invoiceHistory" >

       </ListView>

       <Button
           android:id="@+id/bt_ViewInvoHistryReport_invoiceHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_toLeftOf="@+id/bt_sendEmail_invoiceHistory"
           android:text="View Daily Invoice Details" />

       <Button
           android:id="@+id/bt_sendEmail_invoiceHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/bt_ViewInvoHistryReport_invoiceHistory"
           android:layout_alignRight="@+id/lv_invoHistry_invoiceHistory"
           android:layout_below="@+id/lv_invoHistry_invoiceHistory"
           android:text="Send email" />

       <TextView
           android:id="@+id/tv_startDate_invoiceHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/bt_startDate_invoiceHistory"
           android:layout_alignBottom="@+id/bt_startDate_invoiceHistory"
           android:layout_toLeftOf="@+id/bt_startDate_invoiceHistory"
           android:text="2012/10/12"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <TextView
           android:id="@+id/tv_title_startDate_invoiceHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/tv_startDate_invoiceHistory"
           android:layout_alignBottom="@+id/tv_startDate_invoiceHistory"
           android:layout_alignLeft="@+id/tv_Tititle_repid_invoiceHistory"
           android:text="Starting Date"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <Button
           android:id="@+id/bt_startDate_invoiceHistory"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="55dp"
           android:layout_height="35dp"
           android:layout_alignRight="@+id/lv_invoHistry_invoiceHistory"
           android:layout_below="@+id/tv_repid_invoiceHistory"
           android:layout_marginTop="24dp"
           android:text="Date" />

       <Button
           android:id="@+id/bt_endDate_invoiceHistory"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="55dp"
           android:layout_height="35dp"
           android:layout_alignLeft="@+id/bt_startDate_invoiceHistory"
           android:layout_below="@+id/bt_startDate_invoiceHistory"
           android:text="Date" />

       <TextView
           android:id="@+id/tv_title_enddate_invoiceHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/bt_endDate_invoiceHistory"
           android:layout_alignLeft="@+id/tv_title_startDate_invoiceHistory"
           android:text="End Date"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <TextView
           android:id="@+id/tv_endDate_invoiceHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/bt_endDate_invoiceHistory"
           android:layout_alignBottom="@+id/bt_endDate_invoiceHistory"
           android:layout_toLeftOf="@+id/bt_endDate_invoiceHistory"
           android:text="2013/11/12"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <Button
           android:id="@+id/bt_viewInvoice_invoiceHistory"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="55dp"
           android:layout_height="40dp"
           android:layout_alignLeft="@+id/tv_title_enddate_invoiceHistory"
           android:layout_alignRight="@+id/bt_endDate_invoiceHistory"
           android:layout_below="@+id/bt_endDate_invoiceHistory"
           android:text="View Invoices" />

</RelativeLayout>
