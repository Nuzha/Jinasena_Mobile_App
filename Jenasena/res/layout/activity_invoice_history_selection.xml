<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InvoiceHistorySelection" >

    <TextView
        android:id="@+id/tv_invoce_History_Selection_Title_repid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Logged in as"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tv_invoce_History_Selection_repid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_invoce_History_Selection_Title_repid"
        android:layout_alignBottom="@+id/tv_invoce_History_Selection_Title_repid"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/tv_invoce_History_Selection_Title_repid"
        android:text="Del01Rep01"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_invoce_History_Selection_Title_repid"
        android:layout_below="@+id/tv_invoce_History_Selection_Title_repid"
        android:text="Categorizations"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffee28" />

       <Button
        android:id="@+id/bt_invoce_History_Selection_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/tv_invoce_History_Selection_Title_repid"
        android:text="Next"
        android:textColor="#ffee28" />

       <RadioGroup
           android1:id="@+id/radioGroup1"
           android1:layout_width="wrap_content"
           android1:layout_height="wrap_content"
           android1:layout_alignRight="@+id/tv_invoce_History_Selection_repid"
           android1:layout_below="@+id/textView1"
           android1:layout_marginTop="43dp" >

           <RadioButton
               android1:id="@+id/rb_invoiceHistry_Selection_all"
               android1:layout_width="match_parent"
               android1:layout_height="wrap_content"
               android1:checked="false"
               android1:text="Time period"
               android1:textColor="@color/white" />

           <RadioButton
               android1:id="@+id/rb_invoce_History_Selection_date"
               android1:layout_width="wrap_content"
               android1:layout_height="wrap_content"
               android1:layout_marginTop="40dp"
               android1:checked="false"
               android1:text="Particular date"
               android1:textColor="@color/white" />

           <RadioButton
               android1:id="@+id/rb_invoce_History_Selection_customer"
               android1:layout_width="wrap_content"
               android1:layout_height="wrap_content"
               android1:layout_marginTop="41dp"
               android1:checked="false"
               android1:text="Customer Based"
               android1:textColor="@color/white" />
       </RadioGroup>

</RelativeLayout>