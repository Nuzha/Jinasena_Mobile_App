<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbround"
    tools:context=".ViewLowStock" >

    <TextView
        android:id="@+id/tv_vls_loggerlbl_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="You are logged in as:"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tv_vls_logger_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/tv_vls_loggerlbl_rosh"
        android:text="TextView"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tv_vls_name_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_vls_loggerlbl_rosh"
        android:layout_marginTop="26dp"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_vls_qty1_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_remaining_stock"
        android:layout_alignLeft="@+id/tv_vls_logger_rosh"
        android:layout_alignParentRight="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_vls_today_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_vls_reqdate_rosh"
        android:layout_alignBottom="@+id/tv_vls_reqdate_rosh"
        android:layout_alignLeft="@+id/tv_vls_qty1_rosh"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_vls_date_rosh"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_vls_today_rosh"
        android:layout_alignBottom="@+id/tv_vls_today_rosh"
        android:layout_toRightOf="@+id/tv_vls_today_rosh"
        android:text="Date"
        android:textSize="7dp" />

    <TextView
        android:id="@+id/tv_vls_datercvd_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_vls_receiveddatelbl_rosh"
        android:layout_alignBottom="@+id/tv_vls_receiveddatelbl_rosh"
        android:layout_toLeftOf="@+id/btn_vls_date_rosh"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edt_vls_rcvdstock_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_vls_rcvqt_rosh"
        android:layout_alignLeft="@+id/tv_vls_qty1_rosh"
        android:layout_alignRight="@+id/tv_vls_qty1_rosh"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_vls_receiveddatelbl_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_vls_stock_rosh"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
        android:text="Received Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_vls_reqdate_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_vls_receiveddatelbl_rosh"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="46dp"
        android:text="Requested date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_vls_rcvqt_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_vls_date_rosh"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp"
        android:text="Received Qty"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_remaining_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_vls_name_rosh"
        android:layout_marginTop="35dp"
        android:text="Available Qty"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_vls_itemname_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_remaining_stock"
        android:layout_alignLeft="@+id/tv_vls_qty1_rosh"
        android:layout_alignParentRight="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_vls_stock_rosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="Update the Stock" />

    <Button
        android:id="@+id/btn_recivddate_vls_roshn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_vls_datercvd_rosh"
        android:layout_alignBottom="@+id/tv_vls_datercvd_rosh"
        android:layout_alignLeft="@+id/btn_vls_date_rosh"
        android:layout_alignRight="@+id/btn_vls_date_rosh"
        android:text="Date" 
        android:textSize="7dp"/>

</RelativeLayout>