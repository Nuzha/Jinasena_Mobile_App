<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:scrollbarAlwaysDrawVerticalTrack="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbround" >

    <TextView
        android:id="@+id/tv_repdata_company_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_repdata_address_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_repdata_company_Isuru"
        android:text="ADDRESS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffee28" />

    <TextView
        android:id="@+id/tv_repdata_email_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_repdata_address_Isuru"
        android:text="EMAIL"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffee28" />

    <EditText
        android:id="@+id/et_repdata_email_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_repdata_email_Isuru"
        android:editable="false"
        android:ems="10" />

    <EditText
        android:id="@+id/et_repdata_address_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_repdata_address_Isuru"
        android:editable="false"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_repdata_phone_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_repdata_email_Isuru"
        android:text="PHONE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffee28" />

    <EditText
        android:id="@+id/et_repdata_phone_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_repdata_phone_Isuru"
        android:editable="false"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/iv_repdata_call_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_repdata_phone_Isuru"
        android:layout_marginTop="18dp"
        android:src="@drawable/call" />

    <ImageView
        android:id="@+id/iv_repdata_send_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_repdata_sms_Isuru"
        android:layout_marginTop="52dp"
        android:src="@drawable/send" />

    <ImageView
        android:id="@+id/iv_repdata_email_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/et_repdata_address_Isuru"
        android:src="@drawable/mail" />

    <ImageView
        android:id="@+id/iv_repdata_sms_Isuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_repdata_phone_Isuru"
        android:layout_marginTop="16dp"
        android:src="@drawable/sms" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_repdata_send_Isuru"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_repdata_call_Isuru"
        android:layout_marginTop="24dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:ems="10"
        android:inputType="textMultiLine" />

</RelativeLayout>

</ScrollView>